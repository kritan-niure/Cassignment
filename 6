#include <stdio.h>
int main() {
    int a[2][2], b[2][2], c[2][2];  
    printf("Enter the elements for the first matrix:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("Enter a number: ");
            scanf("%d", &a[i][j]);
        }
    }
    printf("Enter the elements for the second matrix:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("Enter a number: ");
            scanf("%d", &b[i][j]);
        }
    }
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            c[i][j] = a[i][j] + b[i][j];
        }
    }
    printf("The elements of the third matrix after the sum:\n");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            printf("%d\t", c[i][j]);
        }
        printf("\n");
    }

    return 0;
}
